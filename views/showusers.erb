<!-- <%= @results %>     -->

<table class="table table-striped"> 
	<thead>
		<tr>
			<th>#</th>
			<th>Имя</th>
			<th>Телефон</th>
			<th>Дата и время записи</th>
			<th>Парикмахер</th>
			<th>Цвет</th>
		</tr>
	</thead>	
	<tbody>
		<% @results.each do |row| %>
			<tr>
				<td><b><%= row['Id'] %></b></td>
				<td><%= row['username'] %></td>
				<td><%= row['phone'] %></td>
				<td><%= row['datestamp'] %></td>
				<td><%= row['barber'] %></td>
				<td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
			</tr>
		<% end %>
	</tbody>
</table>
